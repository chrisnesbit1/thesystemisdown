{
    "manifest_version": 2,
    "name": "The System Is Down",
    "description": "Is your website online?",
    "version": "1.0",
    "icons": { "128": "img/green_red.png" },
    "browser_action": {
      "default_icon": "img/green_red.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "background",
      "activeTab",
      "<all_urls>"
    ],
    "background" : {
      "scripts": ["jquery.2.2.2.min.js", "contentScript.js"],
      "persistent": false
    }
}