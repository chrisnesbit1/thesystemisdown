{
    "manifest_version": 2,
    "name": "The System Is Down",
    "description": "Is your website online?",
    "version": "1.0",
    "icons": { "128": "img/thecheat.png" },
    "browser_action": {
      "default_icon": "img/thecheat.png",
      "default_popup": "popup.html"
    },
    "permissions": [
      "<all_urls>"
    ],
    "content_scripts": [ 
        { 
            "js": [ "jquery.2.2.2.min.js", "popup.js" ],
             "matches": [ "http://*/*", "https://*/*"]
        }
    ],
    "content_security_policy": "script-src https://jsonp.afeld.me/ 'self'; object-src 'self'"
}